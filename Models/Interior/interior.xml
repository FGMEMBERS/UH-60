<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>zonejaune</object-name>
    <object-name>intporteL</object-name>
    <object-name>intporteR</object-name>
    <object-name>intwindowL1</object-name>
    <object-name>intwindowL2</object-name>
    <object-name>intwindowR1</object-name>
    <object-name>intwindowR2</object-name>
    <object-name>intdoorL</object-name>
    <object-name>intdoorR</object-name>
    <object-name>planchet</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
    <object-name>intglaceL</object-name>
    <object-name>intglaceR</object-name>
    <object-name>intglaceL1</object-name>
    <object-name>intglaceL2</object-name>
    <object-name>intglaceR1</object-name>
    <object-name>intglaceR2</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
    <object-name>intglaceL</object-name>
    <object-name>intglaceR</object-name>
    <object-name>intglaceL1</object-name>
    <object-name>intglaceL2</object-name>
    <object-name>intglaceR1</object-name>
    <object-name>intglaceR2</object-name>
  </effect>
  
  <!-- All seats -->
  <model>
    <path>Aircraft/UH-60/Models/Interior/Seats/all-seats.xml</path>
  </model>
  
  <!-- Tableau -->
  <model>
    <path>Aircraft/UH-60/Models/Interior/Panels/panel.xml</path>
    <offsets>
      <x-m> -6.554 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.746 </z-m>
      <pitch-deg> -30.540 </pitch-deg>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/UH-60/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -5.680 </x-m>
      <y-m>  0.682 </y-m>
      <z-m> -0.969 </z-m>
    </offsets>
  </model>

  <!-- Copilote -->
  <model>
    <name>Copilote</name>
    <path>Aircraft/UH-60/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -5.680 </x-m>
      <y-m> -0.682 </y-m>
      <z-m> -0.969 </z-m>
    </offsets>
  </model>

  <!-- Doors -->
  <animation>
    <name>IntPorteDroite</name>
    <object-name>intporteR</object-name>
    <object-name>intvitreD</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>IntPorteDroite</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntPorteDroite</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 70 </factor>
    <center>
      <x-m> -6.43255 </x-m>
      <y-m>  1.12963 </y-m>
      <z-m> -1.13138 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <animation>
    <name>IntPorteGauche</name>
    <object-name>intporteL</object-name>
    <object-name>intvitreG</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>IntPorteGauche</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntPorteGauche</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> -70 </factor>
    <center>
      <x-m> -6.43255 </x-m>
      <y-m> -1.12963 </y-m>
      <z-m> -1.13138 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <!-- Windows -->
  <animation>
    <name>IntFenetresArrieres</name>
    <object-name>intglaceL2</object-name>
    <object-name>intglaceR2</object-name>
    <object-name>intwindowL2</object-name>
    <object-name>intwindowR2</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntFenetresArrieres</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.windows.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>IntFenetresArrieres</object-name>
    <property>sim/model/door-positions/windows/position-norm</property>
    <factor> -0.3 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntFenetresTotals</name>
    <object-name>intglaceL1</object-name>
    <object-name>intglaceL2</object-name>
    <object-name>intglaceR1</object-name>
    <object-name>intglaceR2</object-name>
    <object-name>intwindowL1</object-name>
    <object-name>intwindowR1</object-name>
    <object-name>intwindowL2</object-name>
    <object-name>intwindowR2</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntFenetresTotals</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.windows.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>IntFenetresTotals</object-name>
    <property>sim/model/door-positions/windows/position-norm</property>
    <factor> -0.3 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Cargo doors -->
  <animation>
    <name>IntPortesArrieres</name>
    <object-name>intglaceL</object-name>
    <object-name>intglaceR</object-name>
    <object-name>intdoorL</object-name>
    <object-name>intdoorR</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>IntPortesArrieres</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.bay.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>IntPortesArrieres</object-name>
    <property>sim/model/door-positions/bay/position-norm</property>
    <factor> 1.70 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
